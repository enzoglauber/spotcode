CHANGE Dockerfile, docker-compose and database.yml
chown -R $USER:$USER .
###################
###################
docker run --rm --user "$(id -u):$(id -g)" -v $(pwd):/usr/src -w /usr/src -ti ruby:2.5.1 bash
gem install rails -v '5.2.1'
# -B= Para nao instalar as gems
# -T= Para nao instalar os testes
rails _5.2.1_ new . --webpack -B -T -d postgresql

//Renomeie o arquivo application.css para application.scss
mv app/assets/stylesheets/application.css app/assets/stylesheets/application.scss

// YARN
docker-compose run --rm app bundle exec yarn install 

docker-compose up --build
docker-compose run --rm app bundle install
docker-compose run --rm app bundle exec rake db:create
docker-compose run --rm app bundle exec rake db:migrate

// DEVISE
docker-compose run --rm app bundle exec rails g devise:install
docker-compose run --rm app bundle exec rails g devise User

// CONTROLLER
docker-compose run --rm app bundle exec rails g controller home index
docker-compose run --rm app bundle exec rails g controller dashboard index
docker-compose run --rm app bundle exec rails g controller search index new

//MODELS
docker-compose run --rm app bundle exec rails g model artist name
docker-compose run --rm app bundle exec rails g model category name
docker-compose run --rm app bundle exec rails g model album title date:datetime category:references artist:references
docker-compose run --rm app bundle exec rails g model song title played_count:integer album:references
docker-compose run --rm app bundle exec rails g model recently_heard user:references album:references
docker-compose run --rm app bundle exec rails g model favorite user:references favoritable:references{polymorphic}

//SEEDs (somente funcionou com a instalação do webpack, nem o 'rails console', funcionou sem isso)
docker-compose run --rm app bundle exec rails webpacker:install
docker-compose run --rm app bundle exec rake db:seed

//ADD WITH yarn
docker-compose run --rm app bundle exec yarn add @fortawesome/fontawesome-free
docker-compose run --rm app bundle exec yarn add jquery